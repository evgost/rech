{
    "manifest_version": 2,
    "name": "__MSG_extName__",
    "description": "__MSG_extDescription__",
    "version": "0.1",
    "homepage_url": "http://github.com/evgenyo/rech",
    "default_locale": "en",
    // "icons": {
    //     "16": "images/icons/favicon-16x16.png",
    //     "32": "images/icons/favicon-32x32.png",
    //     "96": "images/icons/favicon-96x96.png",
    //     "144": "images/icons/android-icon-144x144.png",
    //     "192": "images/icons/android-icon-192x192.png"
    // },
    "permissions": [
        "storage",
        "activeTab",
        "contextMenus"
    ],
    "browser_action": {
        "default_icon": "images/icon-prototype.png",
        "default_popup": "html/popup.html"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["js/content.js"],
        "css": ["css/content.css"],
        "run_at": "document_start",
        "all_frames": true
    }],
    "web_accessible_resources": [
        "js/libs/jquery.js",
        "main.js",
        "content.js",
        "images/logo.png"
    ],
    "background": {
        "scripts": ["js/background.js"]
    },
    "options_ui": {
        "page": "html/options.html",
        "chrome_style": true
    }
}
